{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kalima",
  "version": "0.1.0",
  "identifier": "com.kalima.desktop",
  "build": {
    "frontendDist": "../frontend",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Kalima",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../../data/database/kalima.db",
      "../../data/search-index"
    ],
    "icon": ["icons/app-icon.png"]
  }
}
