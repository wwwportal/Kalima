{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kalima",
  "version": "0.1.0",
  "identifier": "com.kalima.desktop",
  "build": {
    "frontendDist": "../static",
    "devUrl": "http://127.0.0.1:8080",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Kalima",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "http://127.0.0.1:8080"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../kalima.db",
      "../kalima-index"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
